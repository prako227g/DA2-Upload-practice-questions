#include <stdio.h>

int main() {
    // size of different data types
    printf("Size of char: %d byte(s)\n", sizeof(char));
    printf("Size of short: %d byte(s)\n", sizeof(short));
    printf("Size of int: %d byte(s)\n", sizeof(int));
    printf("Size of long: %d byte(s)\n", sizeof(long));
    printf("Size of float: %d byte(s)\n", sizeof(float));
    printf("Size of double: %d byte(s)\n", sizeof(double));
    printf("Size of long double: %d byte(s)\n", sizeof(long double));

    // size of different types of pointers
    printf("Size of char pointer: %d byte(s)\n", sizeof(char *));
    printf("Size of short pointer: %d byte(s)\n", sizeof(short *));
    printf("Size of int pointer: %d byte(s)\n", sizeof(int *));
    printf("Size of long pointer: %d byte(s)\n", sizeof(long *));
    printf("Size of float pointer: %d byte(s)\n", sizeof(float *));
    printf("Size of double pointer: %d byte(s)\n", sizeof(double *));
    printf("Size of long double pointer: %d byte(s)\n", sizeof(long double *));
    printf("Size of void pointer: %d byte(s)\n", sizeof(void *));

    return 0;
}
